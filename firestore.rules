rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Məhsullar - hamı oxuya bilər, yalnız admin yaza bilər
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Brendlər - hamı oxuya bilər, yalnız admin yaza bilər
    match /brands/{brandId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Kateqoriyalar - hamı oxuya bilər, yalnız admin yaza bilər
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Seçilmiş məhsullar - hamı oxuya bilər, yalnız admin yaza bilər
    match /featured-products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // İstifadəçilər - yalnız admin oxuya və yaza bilər
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Əlaqə mesajları - hamı yaza bilər, yalnız admin oxuya bilər
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Sorğular - hamı yaza bilər, yalnız admin oxuya bilər
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}